<%= form_with(model: order, local: true) do |form| %>
  <div class='field'>
    <%= form.label :customer %>
    <%= form.select :customer_id, options_for_select(@customers.collect{ | customer | [customer.name, customer.id] }) %>
  </div>

  <div class='field'>
    <%= form.label :product %>
    <%= form.select('product', options_for_select(@products.collect {|product| [ product.name ] }), { :options => {}}, multiple: true, size: @products.length) %>
  </div>

  <div class='actions'>
    <%= form.submit('Create Order') %>
  </div>
<% end %>
